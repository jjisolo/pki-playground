[ req ]
default_bits = 2048
prompt = no
default_md = sha256
req_extensions = req_ext
distinguished_name = dn

[ dn ]
C = UA
ST = Kiev Oblast'
L = Kiev
O = ??
OU = ??
CN = {{ DOMAIN_NAME }}

[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
DNS.1 = {{ DOMAIN_NAME }}
DNS.2 = www.{{ DOMAIN_NAME }}
IP.1 = 127.0.0.1
IP.2 = 127.0.0.1
